pipeline {
  agent any

  environment {
    VAULT_ADDR = 'http://13.203.207.76:8200' // Replace with your Vault address
  }

  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/Ashrithakp97/my-second-repo.git', branch: 'main'
      }
    }

    stage('Create Vault Secret') {
      steps {
        withVault(
          configuration: [vaultUrl: "${env.VAULT_ADDR}"],
                  vaultCredentialId: 'testing',
    vaultSecrets: [
        ]
        ) {
          sh 'chmod +x vault_create_secret.sh && ./vault_create_secret.sh'
        }
      }
    }
  }

  post {
    failure {
      emailext to: 'ashrithakp97@gmail.com',
               subject: "Vault Secret Creation Failed",
               body: "Please check the Jenkins logs for details."
    }
  }
}
