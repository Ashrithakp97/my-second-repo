pipeline {
    agent any

    environment {
        VAULT_ADDR = 'http://13.126.93.105:8200'
    }

    stages {
        stage('Create Vault Secret') {
            steps {
                withVault(
                    configuration: [vaultUrl: "${VAULT_ADDR}", vaultCredentialId: 'testing'],
                    vaultSecrets: []
                ) {
                    script {
                        sh '''
                        chmod +x vault_create_secret.sh
                        ./vault_create_secret.sh
                        '''
                    }
                }
            }
        }
    }

    post {
        failure {
            emailext(
                to: 'ashrithakp97@gmail.com',
                subject: "Vault Secret Creation Failed",
                body: "Please check the Jenkins logs for more details."
            )
        }
    }
 
