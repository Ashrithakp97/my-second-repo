pipeline {
    agent any
    environment {
        VAULT_ADDR="${VAULT_ADDR}" // Still asking Vault address from user
    }
   
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Ashrithakp97/my-second-repo.git'
            }
        }
        stage('Create Vault Secret') {
            steps {

                withCredentials([   //This is a Jenkins method that securely injects credentials stored in Jenkins into the pipeline
                    string(credentialsId: 'VAULT_ROLE_ID', variable: 'VAULT_ROLE_ID'),  // Tells Jenkins to fetch a String credential with ID VAULT_ROLE_ID from the Jenkins credentials store.and That value will be made available as an environment variable named VAULT_ROLE_ID
                    string(credentialsId: 'VAULT_SECRET_ID', variable: 'VAULT_SECRET_ID')
                ]) {
                    script {
                        def result = sh(

                            script: '''
                                export VAULT_ADDR=${VAULT_ADDR}    //Exports the VAULT_ADDR environment variable so it's available to the shell.
                                export VAULT_ROLE_ID=${VAULT_ROLE_ID}
                                export VAULT_SECRET_ID=${VAULT_SECRET_ID}
                                bash vault_create_secret.sh     // Executes your custom Bash script that creates secrets in HashiCorp Vault.
                            ''',

                            returnStatus: true  // # Tells Jenkins to not fail the pipeline immediately if the shell script fails.Instead, it will return the exit code (0 = success, anything else = failure) to result.
                        )
                        if (result == 0) {
                            echo "Vault secret creation successful."

                            currentBuild.result = 'SUCCESS'  //  Explicitly marks the Jenkins build as successful.
                        } else {
                            echo "Vault secret creation failed."
                            currentBuild.result = 'FAILURE'
                        }
                    }
                }
            }
        }
    }
    post {
        always {
            emailext(
                subject: "Vault Secret Creation Job: ${currentBuild.result}",
                body: """
                    Hello,

                    Vault Secret creation Job Status: ${currentBuild.result}.
                    
                    Please check Jenkins logs for details.

                    Regards,
                    Jenkins
                """,
                to: 'ashrithakp97@gmail.com'
            )
        }
    }
}

