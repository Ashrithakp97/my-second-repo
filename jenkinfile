pipeline {
    agent any

    environment {
        VAULT_ADDR = 'http://13.203.207.76:8200'
    }

    stages {
        stage('Checkout CLI Script') {
            steps {
                git url: 'https://github.com/Ashrithakp97/my-second-repo.git', branch: 'main'
            }
        }

        stage('Authenticate with Vault using AppRole') {
            steps {
                
                withVault(
    configuration: [
        vaultCredentialId: 'testing',
        vaultUrl: "${VAULT_ADDR}"
    ],
    vaultSecrets: [
        [
            path: 'approle',
            secretValues: [
                [envVar: 'VAULT_ROLE_ID', vaultKey: 'role_id'],
                [envVar: 'VAULT_SECRET_ID', vaultKey: 'secret_id']
            ]
        ]
    ]
)
{
                    // Once authenticated, run your CLI script
                    sh '''
                        echo "Running Vault CLI command to enable secret engine..."
                        chmod +x vault_create_secret.sh
                        ./vault_create_secret.sh
                    '''
                }
            }
        }
    }
}

        
   
